# Variables de Entorno para Crypto Trading Bot API

# Clave API de Gemini (requerida para el análisis de señales)
GEMINI_API_KEY="TU_CLAVE_API_DE_GEMINI"

# Token del bot de Telegram (requerido para la integración con Telegram)
TELEGRAM_BOT_TOKEN="TU_TOKEN_DE_BOT_DE_TELEGRAM"

# Clave API de 0x.org (requerida para operaciones DEX - Swap API)
ZERO_EX_API_KEY="TU_CLAVE_API_DE_0X"
ZERO_EX_BASE_URL="https://api.0x.org"

# Configuración para CEX (ejemplo con Binance)
# ID del exchange (ej: binance, bybit, okx)
EXCHANGE_ID="binance"
# Clave API del exchange CEX
CEX_API_KEY="TU_CLAVE_API_CEX"|
# Secreto API del exchange CEX
CEX_SECRET="TU_SECRETO_API_CEX"
# Contraseña o Passphrase de la API (requerido por algunos exchanges como OKX o KuCoin)
CEX_PASSWORD="TU_PASSWORD_API_CEX"
# UID del usuario en el exchange (si es requerido)
CEX_UID="TU_UID_DEL_EXCHANGE"

# Configuración para DEX
# Clave privada de la wallet para operaciones DEX (¡MANEJAR CON EXTREMA PRECAUCIÓN!)
DEX_WALLET_PRIVATE_KEY="TU_CLAVE_PRIVADA_DE_WALLET_DEX"
# URL del nodo RPC de Solana (o la red que uses para DEX)
SOLANA_RPC_URL="https://api.mainnet-beta.solana.com"

# Configuración de la aplicación
DEBUG="True" # Establecer en "False" para producción
DEMO_MODE="True" # "True" para simular operaciones con balance virtual, "False" para trading real
PORT=8000 # Puerto en el que se ejecutará la API
